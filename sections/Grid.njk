<style>

.sellix-grid {
  max-width: 1140px;
  width: 100%;
  margin: 0 auto;
  display: grid;
  grid-template-columns: auto auto auto auto;
  border: {{ "1px solid var(--borderColor)" if properties.show_banner_border else "none" }};
  background-color: {{ colors[properties.grid_background_color] }};
  padding: {{ properties.grid_padding }}px;
  box-shadow: {{ properties.grid_shadow }};
  z-index: 2;
  position: relative;
  margin-bottom: {{ properties.grid_margin }}px;
}

.sellix-grid > div {
  text-align: center;
  padding: 20px 0;
  font-size: 30px;
}

</style>
  <div class="sellix-grid">
  {% for block_name in settings.block_order %}
      {%- render_block block_name -%}
    {% endfor%}
  </div>
   <script src="{{ 'script2.js' | asset_url}}"></script>
